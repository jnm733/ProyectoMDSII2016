<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
 "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
	<session-factory>
   	<!-- properties -->
		<property name="dialect">org.hibernate.dialect.MySQL5InnoDBDialect</property>
		<property name="connection.driver_class">com.mysql.jdbc.Driver</property>
		<property name="connection.url">jdbc:mysql://localhost/mds2</property>
		<property name="connection.username">root</property>
		<property name="connection.password"></property>
		<property name="show_sql">false</property>
		<property name="query.substitutions">true 1, false 0, yes 'Y', no 'N'</property>
		<!-- mapping files -->
		<mapping resource="ormmapping/diagrama_de_base_de_datos/Barrio.hbm.xml" />
		<mapping resource="ormmapping/diagrama_de_base_de_datos/Consulta.hbm.xml" />
		<mapping resource="ormmapping/diagrama_de_base_de_datos/Descarga.hbm.xml" />
		<mapping resource="ormmapping/diagrama_de_base_de_datos/Direccion.hbm.xml" />
		<mapping resource="ormmapping/diagrama_de_base_de_datos/Evento.hbm.xml" />
		<mapping resource="ormmapping/diagrama_de_base_de_datos/Imagen.hbm.xml" />
		<mapping resource="ormmapping/diagrama_de_base_de_datos/Linea.hbm.xml" />
		<mapping resource="ormmapping/diagrama_de_base_de_datos/Linea_Parada.hbm.xml" />
		<mapping resource="ormmapping/diagrama_de_base_de_datos/Parada.hbm.xml" />
		<mapping resource="ormmapping/diagrama_de_base_de_datos/PuntoInteres.hbm.xml" />
		<mapping resource="ormmapping/diagrama_de_base_de_datos/Tarifa.hbm.xml" />
		<mapping resource="ormmapping/diagrama_de_base_de_datos/Usuario.hbm.xml" />
	</session-factory>
</hibernate-configuration>
